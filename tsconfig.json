{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "outDir": "dist",
    "baseUrl": "./",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "strict": true,
    "moduleResolution": "node"
  }
}
